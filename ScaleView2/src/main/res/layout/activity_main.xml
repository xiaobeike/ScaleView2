<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shell.arc_scale_view.MainActivity">

    <com.shell.arc_scale_view.ScaleView2
        android:id="@+id/arc_scaleview"
        android:layout_width="110dp"
        android:layout_height="400dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        app:arcLineColor="#00ffffff"
        app:drawLineSpace="1"
        app:drawTextSpace="60"
        app:everyScaleValue="1"
        app:indicatorColor="#F7B500"
        app:scaleLineColor="#ffffff"
        app:scaleMin="0"
        app:scaleNum="240"
        app:scaleSpace="1"
        app:scaleTextColor="#ffffff"
        app:scaleUnit=""
        app:selectTextColor="#F7B500"
        app:shape="arc" />

    <TextView
        android:id="@+id/tv_output_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arc_scaleview"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
